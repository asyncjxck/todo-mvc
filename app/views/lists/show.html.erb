<section class="todoapp">
  <header class="header">

    <h1><%= @list.name %></h1>
      <%= form_for([@list, @item]) do |f| %>
      <%= f.text_field :description, class: 'new-todo', placeholder: (@item.errors.full_messages_for(:description).first || "New item name...") %>        
      <%= f.submit style: 'display: none' %>
      <% end %>  

  </header>

  <section class="main">
    <ul class="todo-list">
      <% @list.items.each do |item| %>
        <li class="<%= "completed" if item.complete? %>">
          <div class="view">
          <form action='/'>
            <input class="toggle" type="checkbox" <%= "checked='checked'" if item.complete? %>>
            <input type='submit'>
          </form>
            <label><%= item.description %></label>
          </div>
        </li>
      <% end %>

    </ul>
  </section>

  <footer class="footer">
  </footer>
</section>